html, body, #render-section, .content, .section1
  height:100%
.row
  max-width 950px
body
  font-family: 'Roboto', sans-serif
  background-color: rgb(60, 123, 218)
  padding: 0
  margin: 0
  #render-section
    .content
      .section1
        background-color: rgba(255, 255, 255, .9)
        .caja-inicio
          text-align center
          margin-top 10%
          p
            padding 2em 0
      .section2
        height: 50%
        h3
          color #fff
          font-size 2em
        .caja-imagenes
          display flex
          justify-content space-between
          .imagen-conexion
            .imagen-redonda
              border-radius 50%
            .imagen-borde-suave
              border-radius 10px
            .wrapper
              .texto
                width 100%
                color: #000
                position:relative
                bottom:55px
                left:0px
                padding .5em 0 .5em .3em
                background-color rgba(255, 255, 255, .9)
                border-radius 0px 0px 10px 10px
      .section3
        height: 80%
        background-image: url('img/parallax.jpg')
        background-position: 0 -50px
      footer
        padding 1em
        text-align center

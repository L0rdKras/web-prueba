// Para definir la hoja de estilo, utilice el preprocesador stylus
html, body, #render-section, .content, .section1
  height:100%
.row
  max-width 950px
body
  font-family: 'Roboto', sans-serif
  background-color: rgb(60, 123, 218)
  padding: 0
  margin: 0
  #render-section
    .content
      .section1
        background-color: rgba(255, 255, 255, .9)
        .caja-inicio
          text-align center
          margin-top 10%
          .logo
            padding 1em 0
          p
            padding 2em 0
      .section2
        height: 50%
        h3
          color #fff
          font-size 2em
        .caja-imagenes
          display flex
          justify-content space-between
          .imagen-conexion
            .imagen-redonda
              border-radius 50%
            .imagen-borde-suave
              border-radius 10px
            .wrapper
              .texto
                width 100%
                color: #000
                position:relative
                bottom:55px
                left:0px
                padding .5em 0 .5em .3em
                background-color rgba(255, 255, 255, .9)
                border-radius 0px 0px 10px 10px
                visibility hidden
            .wrapper:hover
              .texto
                visibility visible
      .section3
        height: 80%
        background-image: url('img/parallax.jpg')
        background-position: 0 -50px
      footer
        height 10%
        padding 1em
        text-align center

.Modal
  position: absolute;
  top: 40px;
  left: 30%;
  right: 40px;
  bottom: 40px;
  width: 40%
  display flex
  flex-wrap wrap
  border 2px solid #000
  border-radius 20px
  background-color #fff
  img
    width 310px
    margin 0 auto
  .box-login
    width 100%
    margin 0 1em
    button
      background-color rgb(60, 123, 218)
      color #fff
.error
  color: rgb(236, 53, 13)
  font-weight bolder
.texto-centrado
  text-align center
